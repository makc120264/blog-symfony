{# templates/default/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Posts</h1>
        <div class="row">
            {% for article in articles %}
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.title }} {{ article.id }}</h4>
                        <p class="card-text">{{ article.content }}</p>
                        <a href="{{ article.slug }}" class="card-link">More...</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <!-- Button to Open the Modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Add post
            </button>
        </div>
    </div>

    {{ include('default/post/add-post.html.twig') }}

{% endblock %}
